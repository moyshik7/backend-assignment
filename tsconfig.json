{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "outDir": "./build/",
        "rootDir": "./src/",
        "removeComments": true,
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}